!pip install yfinance
import yfinance as yf
tesla = yf.Ticker("TSLA")
hist=tesla.history(period="5y")
print(hist)
print(tesla.recommendations)
hist=hist.reset_index()
for i in ['Open', 'High', 'Close', 'Low']: 
      hist[i]  =  hist[i].astype('float64')
#Line Chart
print("Line Chart:")
import plotly.express as px
fig = px.line(hist, x="Date", y="Close", title='Tesla Stock Prices')
fig.show()
#Candlestick Chart
print("Candlestick Chart:")
import plotly.graph_objects as go
fig = go.Figure(data=[go.Candlestick(x=hist['Date'], open=hist['Open'], high=hist['High'], low=hist['Low'], close=hist['Close'])])
fig.show()
#OHLC Chart
print("OHLC Chart:")
fig = go.Figure(data=[go.Ohlc(x=hist['Date'], open=hist['Open'], high=hist['High'], low=hist['Low'], close=hist['Close'])])
fig.show()
